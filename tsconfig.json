{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "styles/*": ["styles/*"],
      "hooks/*": ["hooks/*"],
      "app/*": ["app/*"],
      "@/*": ["*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "twin.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"]
}
